/* pages/lawyerDetails/consult/consult.wxss */
.banner{
  height: 300rpx;
}
.form{
  position: relative;
  z-index: 1;
  margin:-80rpx 30rpx 30rpx;
  padding: 30rpx;
  background:rgba(255,255,255,.85);
  box-shadow:0px 0px 20px 0px rgba(0,4,0,0.1);
  border-radius:20rpx;
}
.title{
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}
.ipt-text input{
  height:70rpx;
  padding:0 24rpx;
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(204,204,204,1);
  border-radius:35rpx; 
  margin: 30rpx 0;
}
.ipt-text textarea{
  width: auto;
  height:250rpx;
  line-height: 42rpx;
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(204,204,204,1);
  border-radius:35rpx;  
  margin: 30rpx 0;
  padding:20rpx 24rpx;
}
.submit{
  font-size: 36rpx;
  color: #ffffff;
  height: 80rpx;
  line-height: 80rpx;
  background:rgba(52,130,253,1);
  border-radius:40rpx;
}